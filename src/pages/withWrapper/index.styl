// 头部公共区域的样式

.App {
  position: absolute;
  top: 0;
  right: 0;
  bottom: 0;
  left: 0;
  overflow: hidden;
  min-width: 1330px;
  min-height: 600px;
  background: #cccccc;
}

.App-logo {
  animation: App-logo-spin infinite 20s linear;
  height: 60px;
}

.App-header {
  position: relative;
  width: 100%;
  height: 16%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  font-size: 22px;
  color: white;
  background-color: #282c34;
}

.App-ledger {
  position: relative;
  width: 80%;
  height: 80%;
  margin: 0 auto;
  background: #ffffff;
  box-shadow: 0 0 10px 3px rgba(0,0,0,.35);
  box-sizing: border-box;
  padding: 18px;
  overflow-y: scroll;
}

@keyframes App-logo-spin {
  from {
    transform: rotate(0deg);
  }
  to {
    transform: rotate(360deg);
  }
}
